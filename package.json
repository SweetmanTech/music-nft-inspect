{
  "name": "npm-typescript-react-template",
  "version": "0.0.0",
  "description": "npm typescript react template",
  "typings": "dist/index.d.ts",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/SweetmanTech/npm-react-typescript-template",
  "author": "sweetman.eth",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "babel-loader": "^8.2.2",
    "husky": "^6.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier src --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "prepack": "yarn clean && tsc",
    "publish-prelease": "npm publish --access public --tag=pre-release",
    "build": "yarn run prepack",
    "clean": "rm -rf ./dist"
  }
}
